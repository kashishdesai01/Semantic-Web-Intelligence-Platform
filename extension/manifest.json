{
  "manifest_version": 3,
  "name": "InsightLens Reader",
  "version": "0.1.0",
  "description": "Summarize, extract insights, and save notes from any page.",
  "permissions": ["scripting", "tabs", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "InsightLens"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
